<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvLevelBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level A"
                android:background="@drawable/bg_button"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginEnd="12dp"/>

            <TextView
                android:id="@+id/tvQuestionPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contoh pertanyaan panjang?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end"/>
        </LinearLayout>
        
        <TextView
            android:id="@+id/tvAnswerPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jawaban: A. Gajah"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditQuiz"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ubah"
                android:background="@drawable/bg_button_edit"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDeleteQuiz"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Hapus"
                android:background="@drawable/bg_button_delete"
                android:textColor="#FFFFFF"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
